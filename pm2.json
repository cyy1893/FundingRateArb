{
  "apps": [
    {
      "name": "funding-rate-arb-dev",
      "script": "npm",
      "args": "run dev",
      "cwd": ".",
      "env": {
        "NODE_ENV": "development"
      },
      "watch": ["src", "components", "public", "next.config.ts"],
      "autorestart": true,
      "max_memory_restart": "1G",
      "out_file": "logs/funding-rate-arb-dev.out.log",
      "error_file": "logs/funding-rate-arb-dev.err.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    },
    {
      "name": "funding-rate-arb",
      "script": "npm",
      "args": "run start",
      "cwd": ".",
      "env": {
        "NODE_ENV": "production"
      },
      "autorestart": true,
      "max_memory_restart": "1G",
      "out_file": "logs/funding-rate-arb.out.log",
      "error_file": "logs/funding-rate-arb.err.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss"
    }
  ]
}
